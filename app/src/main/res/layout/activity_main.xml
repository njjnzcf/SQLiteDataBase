<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.MainActivity">

    <EditText
        android:id="@+id/edit01"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行插入"
        app:layout_constraintLeft_toRightOf="@id/edit01" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除"
        app:layout_constraintLeft_toRightOf="@id/btn_insert" />

    <EditText
        android:id="@+id/edit02"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit01" />

    <EditText
        android:id="@+id/edit03"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/edit02"
        app:layout_constraintTop_toBottomOf="@id/edit01" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行更新"
        app:layout_constraintLeft_toRightOf="@id/edit01"
        app:layout_constraintTop_toBottomOf="@id/btn_insert" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除"
        app:layout_constraintLeft_toRightOf="@id/btn_insert"
        app:layout_constraintTop_toBottomOf="@id/btn_insert" />

    <EditText
        android:id="@+id/edit04"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit02" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行删除"
        app:layout_constraintLeft_toRightOf="@id/edit01"
        app:layout_constraintTop_toBottomOf="@id/edit02" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除"
        app:layout_constraintLeft_toRightOf="@id/btn_insert"
        app:layout_constraintTop_toBottomOf="@id/edit02" />
    <Button
        android:id="@+id/btn_find_all"
        android:text="查询所有"
        app:layout_constraintTop_toBottomOf="@id/edit04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_clear_all"
        android:text="清除所有"
        app:layout_constraintTop_toBottomOf="@id/btn_find_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text_result"
        app:layout_constraintTop_toBottomOf="@id/btn_clear_all"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
